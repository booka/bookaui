<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.slide {
			background-color: #C6C8CA;
			height: 100%;
			width: 100%;
		}
		.top {
			background-color: white;
		}
	</ui:style>
	<g:LayoutPanel>
		<g:layer left="0" top="0" right="0" height="80px">
			<g:SimplePanel ui:field="north" styleName="{style.top}">
			</g:SimplePanel>
		</g:layer>
		<g:layer left="0" top="80px" right="0" bottom="0">
            <g:LayoutPanel ui:field="center" styleName="{style.slide}">
            </g:LayoutPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 