<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:net.boklab.workspace.client.ui.signals">

	<g:LayoutPanel styleName="bk-Navigation">
		<g:layer left="0" top="0" width="300px" bottom="0">
			<g:FlowPanel styleName="work">
				<g:Anchor styleName="{style.entrance}" ui:field="entrance" />
				<g:Anchor styleName="{style.archives}" ui:field="archives" />
				<g:Anchor styleName="{style.edition}" ui:field="edition" />
				<g:Anchor styleName="{style.booka}" ui:field="booka" />
			</g:FlowPanel>
		</g:layer>
		<g:layer left="320px" top="0" right="270px" bottom="0">
			<b:SignalsWidget ui:field="signals"></b:SignalsWidget>
		</g:layer>
		<g:layer top="0" bottom="0" width="300px" right="0">
			<g:FlowPanel styleName="social">
				<g:Anchor styleName="{style.calendar}" ui:field="calendar" />
				<g:Anchor styleName="{style.account}" ui:field="account" />
				<g:Anchor styleName="{style.login}" ui:field="login" />
				<g:Anchor styleName="{style.contact}" ui:field="contact" />
			</g:FlowPanel>
		</g:layer>
	</g:LayoutPanel>

	<ui:style>
		@sprite .entrance {
			gwt-image: 'entranceImage';
		}
		
		@sprite .archives {
			gwt-image: 'archivesImage';
		}
		
		@sprite .edition {
			gwt-image: 'editionImage';
		}
		
		@sprite .booka {
			gwt-image: 'bookaImage';
		}
		
		@sprite .account {
			gwt-image: 'accountImage';
		}
		
		@sprite .contact {
			gwt-image: 'contactImage';
		}
		
		@sprite .calendar {
			gwt-image: 'calendarImage';
		}
		
		@sprite .login {
			gwt-image: 'loginImage';
		}
	</ui:style>

	<ui:image field="entranceImage" src="resources/entrance.icon.png"></ui:image>
	<ui:image field="archivesImage" src="resources/archives.icon.png"></ui:image>
	<ui:image field="editionImage" src="resources/edition.icon.png"></ui:image>
	<ui:image field="bookaImage" src="resources/booka.icon.png"></ui:image>
	<ui:image field="accountImage" src="resources/account.icon.png"></ui:image>
	<ui:image field="contactImage" src="resources/contact.icon.png"></ui:image>
	<ui:image field="calendarImage" src="resources/calendar.icon.png"></ui:image>
	<ui:image field="loginImage" src="resources/login.icon.png"></ui:image>

</ui:UiBinder> 